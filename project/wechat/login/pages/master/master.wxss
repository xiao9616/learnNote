/* pages/master/master.wxss */
.index-container{
  width: 100%;
  height: 100%;
}

.index-container image{
  width: 100%;
  height: 1500px;
}

.header{
  height: 80rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.selection{
  border-bottom: 4px solid #ddd;
  padding: 1rpx;
}
.text-all{
  color: green;
  font-size: 10px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item{
  height: 250rpx;
  width: 48%;
  background-color: goldenrod;
  margin: 2px;
  position: relative;
}

.content-item image{
  height: 250rpx;
  width: 100%;
}

.content-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
  height: 125px;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right:1%;
  padding-bottom: 1%;
}

.list-item{
  height: 500rpx;
  width: 100%;
}

.list-item-images{
  height: 300rpx;
  width: 100%;
  position: relative;
}

.list-item-images-img{
  height: 100%;
  width: 100%;
  
}

.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding-left: 10rpx;
}
.list-item-text-title{
  
}
.list-item-text-content{
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;

}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 100rpx;
}